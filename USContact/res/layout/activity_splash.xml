<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".SplashActivity" >

    <ImageView
        android:id="@+id/imageViewNcuhomeLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/textViewSplashNcuhome"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/contentDescription"
        android:paddingBottom="12dp"
        android:src="@drawable/ncuhomelogo" />

    <TextView
        android:id="@+id/textViewSplashNcuhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/splash_ncuhome"
        android:textColor="#696969"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewSplashContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSplashNcuhome"
        android:layout_centerInParent="true"
        android:paddingTop="12dp"
        android:text="@string/splash_contact"
        android:textColor="#696969"
        android:textSize="18sp" />

</RelativeLayout>